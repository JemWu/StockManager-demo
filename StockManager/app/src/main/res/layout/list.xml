<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/kinds_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#3F51B5"
        android:gravity="center_vertical"
        android:text=" 库存管理"
        android:textColor="#fff"
        android:textSize="26dp"></TextView>


    <ImageButton
        android:id="@+id/backup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kinds_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#3F51B5"
        android:padding="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/backup" />

    <ImageButton
        android:id="@+id/restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kinds_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#3F51B5"
        android:padding="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/restore" />

    <ImageButton
        android:id="@+id/backup_restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kinds_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#3F51B5"
        android:padding="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/backup_restore" />

    <ListView
        android:id="@+id/kinds_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/kinds_top"></ListView>

    <ImageButton
        android:id="@+id/kinds_addButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:src="@drawable/add_button" />


</RelativeLayout>